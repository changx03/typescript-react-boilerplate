    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/express": "^4.16.0",
    "@types/jest": "^23.3.8",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "@types/react-test-renderer": "^16.0.3",
    "autoprefixer": "^9.3.1",
    "babel-core": "^6.26.3",
    "babel-jest": "^23.6.0",
